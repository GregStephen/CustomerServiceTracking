{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "lib": [
      "ES5",
      "ES6",
      "ES2017",
      "ES2018",
      "ES2019",
      "DOM",
      "ES2020",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "./src",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src"
  ]
}
